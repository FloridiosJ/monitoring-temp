# ===========================================
# Configuration Template for Monitoring Stack
# ===========================================
# Copy this file to .env and customize the values for your server

# ===========================================
# SERVER IDENTIFICATION
# ===========================================
# Unique identifier for this server (used in labels and dashboards)
SERVER_NAME=production-server-01
ENVIRONMENT=production

# ===========================================
# GRAFANA CONFIGURATION
# ===========================================
# Admin credentials for Grafana
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=changeme_secure_password

# Grafana domain (if using Traefik)
GRAFANA_DOMAIN=monitoring.example.com

# ===========================================
# SMTP/EMAIL CONFIGURATION FOR ALERTS
# ===========================================
# SMTP server settings for email notifications
SMTP_ENABLED=true
SMTP_HOST=smtp.gmail.com:587
SMTP_USER=your-email@gmail.com
# For Gmail: Use App Password (https://support.google.com/accounts/answer/185833)
SMTP_PASSWORD=your-app-password
SMTP_FROM_ADDRESS=your-email@gmail.com
SMTP_FROM_NAME=Monitoring Alerts

# ===========================================
# ALERTMANAGER CONFIGURATION
# ===========================================
# Email addresses to receive alerts (comma-separated)
ALERT_EMAIL_TO=admin@example.com,ops@example.com

# Alertmanager severity levels
# Options: critical, warning, info
ALERT_MIN_SEVERITY=warning

# ===========================================
# ALERT THRESHOLDS
# ===========================================
# CPU alert threshold (percentage)
ALERT_CPU_THRESHOLD=80

# Memory alert threshold (percentage)
ALERT_MEMORY_THRESHOLD=85

# Disk space alert threshold (percentage)
ALERT_DISK_THRESHOLD=85

# Inode usage alert threshold (percentage)
ALERT_INODE_THRESHOLD=85

# Container restart count threshold
ALERT_CONTAINER_RESTART_THRESHOLD=5

# ===========================================
# TRAEFIK CONFIGURATION (Optional)
# ===========================================
# Set to true if using Traefik reverse proxy
USE_TRAEFIK=false

# Traefik network name
TRAEFIK_NETWORK=traefik_monitoring

# ===========================================
# RETENTION PERIODS
# ===========================================
# How long to keep metrics (Prometheus)
PROMETHEUS_RETENTION=15d

# How long to keep logs (Loki)
LOKI_RETENTION=168h

# ===========================================
# ADVANCED CONFIGURATION
# ===========================================
# Scrape interval for Prometheus (default: 15s)
SCRAPE_INTERVAL=15s

# Evaluation interval for alert rules (default: 15s)
EVALUATION_INTERVAL=15s
